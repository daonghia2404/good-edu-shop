include ./product-component.pug

mixin sectionProduct(title, dataProduct, isSort = false, type = 'carousel')
  section.section.section-product
    .container 
      .section-header.d-flex.align-items-center.justify-content-between
        h2.d-flex.align-items-center 
          = title

        if isSort
          .sort-group.d-flex.align-items-center 
            label Sort by
            select.custom-select(style="min-width: 120px;")
              option(value="#") Mặc định
              option(value="#") A - Z
              option(value="#") Z - A
              option(value="#") Cao nhất
              option(value="#") Thấp nhất

            select.custom-select
              option(value="#") Danh mục 
              option(value="#") Danh mục 1
              option(value="#") Danh mục 2
              option(value="#") Danh mục 3
              option(value="#") Danh mục 4

        else
          a(href="#").d-flex.align-items-center
            |Xem thêm
            img(src="./assets/icons/icon-angle-right.svg", alt="")

      .section-main
        if type === 'column'
          .row 
            each item in dataProduct
              .col-product
                +productComponent(item)

        if type === 'carousel'
          .owl-carousel.custom-carousel-style.arrow-two-side
            each item in dataProduct
              .item 
                +productComponent(item)
              