include ./product-component.pug

mixin sectionProduct(title, dataProduct)
  section.section.section-product
    .container 
      .section-header.d-flex.align-items-center.justify-content-between
        h2.d-flex.align-items-center 
          img(src="./assets/icons/icon-book.svg", alt="")
          = title
        a(href="#").d-flex.align-items-center
          |Xem tất cả
          img(src="./assets/icons/icon-angle-right.svg", alt="")

      .section-main
        .owl-carousel.custom-carousel-style
          each item in dataProduct
            .item 
              +productComponent(item)
              