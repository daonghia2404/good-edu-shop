include ../common/data-news.pug
include ./new-box-component.pug

mixin sectionNews(title, dataProduct)
  section.section.section-news
    .container 
      .section-header.d-flex.align-items-center.justify-content-between
        h2.d-flex.align-items-center 
          img(src="./assets/icons/icon-news.svg", alt="")
          = title
        a(href="#").d-flex.align-items-center
          |Xem tất cả
          img(src="./assets/icons/icon-angle-right.svg", alt="")

      .section-main
        .row 
          .col-lg-7
            .secion-new-wrapper.lists 
              each item in dataNews
                +newBoxComponent(item)

          .col-lg-5
            .secion-new-wrapper 
              each item in dataSingleNew
                +newBoxComponent(item)