mixin newBoxComponent(item)
  .new-box-component(class=`${item.type}`)
    a(href=`${item.link}`).new-image  
      img(src=`${item.image}`, alt="")
    .new-info 
      if item.title
        a(href=`${item.link}`).new-title= item.title 
      if item.time
        p.new-des.countdownJs(data-date=`${item.time}`)
      else
        p.new-des= item.des


