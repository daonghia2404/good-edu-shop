header.header-mobile 
  .container 
    .header-mobile-wrapper.d-flex.align-items-center.justify-content-between
      .header-logo
        a(href="index.html")
          img(src="./assets/images/logo-light.png" alt="")

      form(action="#").header-search.d-flex
        input(type="text" placeholder="Bạn cần tìm gì ?")
        button(type="submit").d-flex.align-items-center.justify-content-center
          img(src="./assets/icons/icon-search-white.svg", alt="")

      .header-action.d-flex.align-items-center
        .header-btn 
          img(src="./assets/icons/icon-user-white.svg", alt="")
        .header-btn 
          .circle-notification 99
          img(src="./assets/icons/icon-shopping-bag-white.svg", alt="")
        .header-btn.menu 
          img(src="./assets/icons/icon-bar-white.svg", alt="")

