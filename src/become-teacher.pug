    ]

    const dataSteps = [
      {
        image: './assets/images/image-step-1.png',
        title: 'Bước 1',
        des: 'Đăng ký khoá học',
      },
      {
        image: './assets/images/image-step-2.png',
        title: 'Bước 2',
        des: 'Xây dựng chương trình với sự tư vấn của GoodEdu',
      },
      {
        image: './assets/images/image-step-3.png',
        title: 'Bước 3',
        des: 'Ký thoả thuận, chia sẻ doanh thu',
      },
      {
        image: './assets/images/image-step-4.png',
        title: 'Bước 4',
        des: 'Quay khoá học',
      },
      {
